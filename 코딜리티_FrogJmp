// you can write to stdout for debugging purposes, e.g.
// System.out.println("this is a debug message");

class Solution {
    public int solution(int X, int Y, int D) {
        // Implement your solution here
            int answer = 0;

            if(X==Y){
                answer=0;
            } else {
                int t = Y - X;
                if( t % D == 0) answer = (t / D);
                else answer = (t / D) + 1;
            }
            return answer;
    }
}
